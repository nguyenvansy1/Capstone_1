<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SettingFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_setting">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_general_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:text="General settings"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_item_1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@+id/txt_general_setting"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cus_item_setting"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="7">

                <LinearLayout
                    android:id="@+id/btn_sw_beep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_beep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Beep"
                            android:textColor="@color/main"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Beep when the scan is successful"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_beep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_vibrate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Vibrate"
                            android:textColor="@color/main"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Vibrate when the scan is successful"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_sw_auto_copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_auto_copy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Auto copy"
                        android:textColor="@color/main"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_copy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Search engine"
                        android:textColor="@color/main"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btn_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/txt_language"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Chang language"
                        android:textColor="@color/main"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="English"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Dark mode"
                        android:textColor="@color/main"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:splitMotionEvents="false"
                            android:text="Rate_us"
                            android:textColor="@color/main"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Rating boost your app"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_helps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_1"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:text="Helps"
                android:textColor="@color/main"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/list_item"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/txt_helps"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cus_item_setting"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Feedback"
                            android:textColor="@color/main"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Report bugs and tell us"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:paddingBottom="5dp"
                        android:text="Version:"
                        android:textColor="@color/main"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/title_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_item_setting"
            android:elevation="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Setting"
            android:textAlignment="center"
            android:textColor="@color/main"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>